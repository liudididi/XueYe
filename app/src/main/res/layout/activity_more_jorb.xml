<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.MoreJorbActivity">
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/mjob_title"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/mschool_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="职业库"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/job_search"
            android:padding="20px"
            android:scaleType="centerCrop"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="90px"
            android:layout_height="90px"
            android:src="@mipmap/search"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>
    <View
        android:layout_below="@+id/mjob_title"
        android:background="#F3F3F3"
        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="26px"></View>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/job_rl"
        android:layout_below="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ListView
                android:scrollbars="none"
                android:layout_width="480px"
                android:layout_height="match_parent"
                android:id="@+id/jobda_list"
                ></ListView>
            <ListView
                android:scrollbars="none"
                android:layout_toRightOf="@id/jobda_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/jobxiao_list"
                ></ListView>

    <!--    <ExpandableListView
            android:scrollbars="none"
            android:layout_marginTop="10px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:id="@+id/tree_view_simple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ExpandableListView>-->

    </RelativeLayout>


    <ProgressBar
        android:visibility="visible"
        android:id="@+id/morjob_pb"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        android:layout_width="100px"
        android:layout_height="100px"
        />

</RelativeLayout>
