<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context="com.example.login_demo.PresonMessageActivity">
    <RelativeLayout
        android:id="@+id/preson_title"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#fff"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/preson_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="个人信息"
            android:textColor="#555555"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
          android:visibility="gone"
            android:id="@+id/preson_complie"
            android:padding="20px"
            android:scaleType="centerCrop"
            android:layout_marginRight="30px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="90px"
            android:layout_height="90px"
            android:src="@drawable/compile"
            />
    </RelativeLayout>
    <View
       android:layout_below="@+id/preson_title"
        android:layout_width="match_parent"
        android:background="#f3f3f3"
        android:layout_height="3px"></View>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/preson_icon"
        android:layout_below="@+id/my_login"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="#fff"

        >
        <TextView
            android:textColor="#555555"
            android:text="头像"
            android:textSize="50px"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_marginTop="60px"
            android:layout_width="wrap_content"
            android:layout_height="80px" />
        <com.meg7.widget.CustomShapeImageView
            android:id="@+id/preson_picon"
             android:layout_alignParentRight="true"
            android:layout_width="150px"
            android:layout_height="150px"
            android:scaleType="centerCrop"
            android:layout_marginTop="20px"
            android:src="@drawable/boy"
            android:layout_marginRight="30px"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="26px"
        android:background="#F3F3F3"
        ></View>

    <RelativeLayout
        android:layout_below="@+id/my_login"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#fff"
        >

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#F3F3F3"
            android:layout_height="3px">
        </View>
        <TextView
            android:textColor="#555555"
            android:text="真实姓名"
            android:textSize="50px"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="80px" />
        <TextView
            android:id="@+id/preson_name"
            android:textColor="#999999"
            android:src="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text=""
            android:textSize="50px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/my_login"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#fff"
        >


        <TextView
            android:textColor="#555555"
            android:text="性别"
            android:textSize="50px"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="80px" />
        <TextView
            android:textColor="#999999"
            android:id="@+id/preson_six"
            android:src="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:layout_width="400px"
            android:gravity="right"
            android:layout_height="80px"
            android:text=""
            android:textSize="50px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_below="@+id/my_login"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#fff"
        >

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#F3F3F3"
            android:layout_height="3px">
        </View>
        <TextView
            android:textColor="#555555"
            android:text="考生类型"
            android:textSize="50px"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="80px" />
        <TextView
            android:id="@+id/preson_type"
            android:src="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:textColor="#999999"

            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="点击右上角编辑修改"
            android:textSize="50px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/my_login"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#fff"

        >

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#F3F3F3"
            android:layout_height="3px">
        </View>
        <TextView
            android:textColor="#555555"
            android:text="高考年份"
            android:textSize="50px"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="80px" />
        <TextView
            android:textColor="#999999"

            android:id="@+id/preson_near"
            android:src="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text=""
            android:textSize="50px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout

        android:layout_below="@+id/my_login"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#fff"

        >

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="#F3F3F3"
            android:layout_height="3px">
        </View>
        <TextView
            android:textColor="#555555"
            android:text="考生所在地"
            android:textSize="50px"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
             android:layout_width="wrap_content"
            android:layout_height="80px" />
        <TextView
            android:textColor="#999999"
            android:id="@+id/preson_highschool"
            android:src="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="35px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>
