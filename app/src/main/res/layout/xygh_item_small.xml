<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="151px">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="20px"></View>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="110px">
    <TextView
    android:id="@+id/ghitem_title"
    android:layout_centerVertical="true"
    android:layout_marginLeft="50px"
    android:textSize="45px"
    android:text="哲学"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_toLeftOf="@+id/ghitem_gailv"
        android:layout_marginRight="30px"
       android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:textSize="40px"
        android:text="专业匹配度:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/ghitem_gailv"
        android:padding="15px"
        android:layout_marginRight="30px"
        android:background="@drawable/lanse"
        android:layout_width="100px"
        android:layout_height="100px"
        android:textSize="30px"
        android:text="10%"
        android:gravity="center"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_below="@+id/rl"></View>
    <View
        android:layout_below="@id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"></View>

</RelativeLayout>