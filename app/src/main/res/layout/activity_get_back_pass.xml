<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
     tools:context="com.example.login_demo.GetBackPassActivity">

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#fff"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/getback_iv_left"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/getback_title"
            android:text=""
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_top"
        android:background="#F3F3F3"
        android:id="@+id/view2">

    </View>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:textSize="40px"
        android:background="#F3F3F3"
        android:textColor="#999999"
        android:layout_marginLeft="50px"
        android:layout_marginTop="123px"
        android:gravity="center_vertical"
        android:text="验证信息后，请设置新密码"/>

    <RelativeLayout
        android:background="#fff"
        android:id="@+id/rl"
        android:layout_below="@id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_marginRight="30px"
            android:layout_marginLeft="50px"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
             android:hint="请输入手机号码"
            android:textSize="45px"
            android:background="@null"
            android:id="@+id/getback_phone"
            android:theme="@style/MyEditText"/>
        <TextView
            android:id="@+id/getback_captcha"
            android:layout_width="270px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:textSize="40px"
            android:textColor="#fff"
            android:layout_below="@+id/textView"
            android:layout_marginTop="40px"
            android:layout_marginRight="45px"
            android:background="@drawable/back_guanzhu"
            android:gravity="center"
            android:text="获取验证码" />
        <TextView
            android:id="@+id/getback_Countdown"
            android:textColor="#e6e6e6"
            android:textSize="40px"
            android:layout_marginRight="45px"
            android:layout_width="270px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40px"
            android:background="@drawable/back_countdown"
            android:visibility="gone"
            android:gravity="center"
            android:text=""
            />
        <TextView
            android:layout_width="270px"
            android:layout_height="90px"
              android:layout_alignParentRight="true"
            android:textSize="40px"
            android:textColor="#fff"
            android:layout_marginRight="45px"
            android:background="@drawable/back_guanzhu"
            android:gravity="center"
            android:text="0S"
            android:layout_marginTop="40px"
            android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@+id/getback_phone"
            android:background="#F3F3F3"></View>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/getback_phone"
            android:layout_marginTop="10px"
            android:hint="请输入短信验证码"
            android:textSize="45px"
            android:layout_marginRight="30px"
            android:layout_marginLeft="50px"
            android:theme="@style/MyEditText"
            android:id="@+id/getback_code" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@+id/getback_code"
            android:background="#F3F3F3"></View>
        <EditText
            android:id="@+id/getback_pass"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@null"

            android:layout_marginRight="30px"
            android:layout_alignLeft="@+id/tv_login"
            android:layout_alignStart="@+id/tv_login"
            android:layout_below="@+id/getback_code"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50px"
            android:hint="请重新设置密码（6-12位字母或数字）"
            android:textSize="45px"
            android:inputType="textPassword"
            android:theme="@style/MyEditText" />
        <ImageView
            android:id="@+id/getback_iv_close"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/getback_code"
            android:layout_marginTop="70px"
            android:layout_marginLeft="30px"
            android:src="@mipmap/close"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/getback_iv_open"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginRight="40px"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/getback_code"
            android:layout_marginTop="70px"
            android:layout_marginLeft="30px"
            android:src="@mipmap/open"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@+id/getback_pass"
            android:background="#F3F3F3"></View>
    </RelativeLayout>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl"
        android:layout_marginTop="208px"
        android:background="@drawable/back_register"
        android:gravity="center"
        android:text="确定"
        android:textColor="#e6e6e6"
        android:textSize="48px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"/>
</RelativeLayout>
