<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rela_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="30px"
                    android:layout_marginTop="30px"
                    android:layout_alignParentRight="true"
                    android:id="@+id/dilog_chahao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cha"
                    android:layout_marginLeft="38px"
                    />
                <TextView
                    android:layout_marginTop="50px"
                    android:layout_marginLeft="50px"
                    android:id="@+id/dlog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="64px"
                    android:textColor="#333"
                    android:text="你好啊"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140px"
                    android:layout_marginLeft="50px"
                    android:text="薪资状况:"
                    android:textColor="#333"
                    android:textSize="46px" />

                <TextView
                    android:layout_marginTop="140px"
                    android:id="@+id/dlog_xz"
                    android:layout_marginLeft="290px"
                    android:layout_toRightOf="@+id/tvmajor1"
                    android:layout_below="@+id/tvmajorone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="46px"
                    android:text="暂无数据"
                    android:textColor="#ff6700"
                    />

                <TextView
                    android:layout_marginLeft="50px"
                    android:textColor="#333"
                    android:layout_marginTop="220px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="46px"
                    android:text="培养目标:"
                    />
                <TextView
                    android:id="@+id/dlog_pymb"
                    android:layout_marginLeft="50px"
                    android:textColor="#333"
                    android:layout_marginTop="290px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="培养目标:"
                    />
                <View
                    android:layout_below="@+id/dlog_pymb"
                    android:layout_marginTop="20px"
                    android:layout_width="match_parent"
                    android:layout_height="10px"
                    android:background="#F3F3F3"
                    ></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_jyzk"
                android:layout_below="@+id/rela_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="50px"
                    android:text="就业状况:"
                    android:textColor="#333"
                    android:textSize="46px" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_below="@+id/tv0"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20px"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_ranking"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                         android:layout_marginLeft="50px"
                        android:text="第 3 名 (教育学)"
                        />
                    <TextView
                        android:id="@+id/tv_rank"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                         android:layout_toRightOf="@+id/view_hx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_below="@id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"
                    android:orientation="horizontal">
                    <TextView
                         android:layout_below="@+id/tv_ranking"
                        android:id="@+id/tv_address"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:text="北京"
                        />

                    <TextView
                        android:layout_marginRight="30px"
                        android:id="@+id/tv_pro_address"
                        android:layout_marginLeft="30px"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         />

                </LinearLayout>

              <LinearLayout
                  android:id="@+id/ll3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/ll2"
                  android:orientation="horizontal">
                  <TextView
                       android:id="@+id/tv_nearjob"
                      android:layout_width="200px"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="50px"
                      android:text="北京"
                      />
                  <TextView
                       android:id="@+id/tv_pro_job"
                      android:layout_marginLeft="30px"
                      android:layout_marginRight="30px"
                       android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      />
              </LinearLayout>





                <View
                    android:layout_marginTop="30px"
                    android:layout_below="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="10px"
                    android:background="#F3F3F3"
                    ></View>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rela_jyfx"
                android:layout_below="@+id/rela_jyzk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="就业方向"
                    android:textColor="#333"
                    android:layout_marginTop="20px"
                    android:textSize="46px" />
                <TextView
                    android:id="@+id/tv_direction_employment"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80px"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rela_kcsgw"
                android:layout_below="@+id/rela_jyfx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="50px"
                    android:text="可从事岗位"
                    android:textColor="#333"
                    android:textSize="46px" />
                <untils.MyGridView
                    android:id="@+id/grid_jobinfo"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:layout_marginTop="120px"
                    android:numColumns="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </untils.MyGridView>
                <View
                    android:layout_below="@+id/grid_jobinfo"
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    ></View>
            </RelativeLayout>

        </RelativeLayout>

</ScrollView>
