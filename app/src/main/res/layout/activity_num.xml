<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".NumActivity">
    <RelativeLayout
        android:id="@+id/rl_add"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/num_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:text="往年专业了录取分数"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#F3F3F3"
        android:layout_below="@id/rl_add">
    </View>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view1"
        android:scrollbars="none"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="166px"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="54px"
            android:textColor="#333333"
            android:layout_marginLeft="64px"
            android:layout_marginTop="20px"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_name"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64px"
            android:layout_marginTop="20px">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:text="北京"
                android:textColor="#999999"/>
            <TextView
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:text="创建时间:"
                android:layout_marginLeft="40px"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:text="1988"
                android:layout_marginLeft="30px"
                android:textColor="#999999"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:text="隶属:"
                android:layout_marginLeft="40px"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_lishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:text="1988"
                android:layout_marginLeft="30px"
                android:textColor="#999999"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#F3F3F3"
        android:layout_below="@id/rl">
    </View>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_below="@+id/view2"
        android:layout_height="134px">
        <TextView
            android:textColor="#fff"
            android:text="文科"
            android:layout_centerVertical="true"
            android:id="@+id/schoold_lq"
            android:textSize="40px"
            android:gravity="center"
            android:layout_marginTop="26px"
            android:layout_marginLeft="64px"
            android:layout_width="214px"
            android:layout_height="80px"
            android:background="@drawable/back_schooldlan"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/schoold_jj"
            android:layout_toRightOf="@+id/schoold_lq"
            android:text="理科"
            android:layout_centerVertical="true"
            android:textSize="40px"
            android:gravity="center"
            android:layout_marginTop="26px"
            android:layout_width="214px"
            android:layout_height="80px"
            android:background="@drawable/back_schoold"
            />
            <LinearLayout
                android:id="@+id/ll_ks"
                android:layout_width="300px"
                android:layout_height="80px"
                android:gravity="center"
                android:background="@drawable/back_schoold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80px"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_ks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:text="考生所在地"
                    />
                <ImageView
                    android:id="@+id/iv_ks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:visibility="visible"
                    android:layout_marginLeft="10px"/>
                <ImageView
                    android:id="@+id/iv_ks_xia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"
                    android:visibility="gone"
                    android:layout_marginLeft="10px"/>
            </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="14px"
        android:background="#F3F3F3"
        android:layout_below="@+id/rl1"
        ></View>
    <untils.FlowLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        >
    </untils.FlowLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="14px"
        android:background="#F3F3F3"
        android:layout_below="@+id/fl"
         ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38px"
            android:text="分数"
            android:textColor="#999999"
            android:layout_marginTop="80px"
            android:layout_marginLeft="55px"
            />
        <TextView
            android:id="@+id/tv_zy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38px"
            android:textColor="#999999"
            android:layout_marginTop="80px"
            android:layout_centerHorizontal="true"
            android:text="法学"/>
        <LinearLayout
            android:id="@+id/zhexian_ll"
             android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="700px"
            android:layout_below="@+id/tv_zy_name"
            android:layout_marginTop="60px">
        </LinearLayout>
    </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
    <ListView
        android:id="@+id/lv"
        android:visibility="gone"
        android:background="#fff"
        android:clickable="false"
        android:layout_marginTop="445px"
        android:layout_width="match_parent"
        android:layout_height="800px"></ListView>
</RelativeLayout>
