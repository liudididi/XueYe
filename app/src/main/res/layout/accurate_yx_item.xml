<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="300px"

       >
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="#fff">
            <untils.CircleProgressView
                android:id="@+id/cpv"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                />
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:layout_marginLeft="190px"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/iv"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48px"
                        android:layout_marginLeft="5px"
                        android:lines="1"
                        android:textColor="#333333"
                        android:text="北京工业大学"/>
                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(8个推荐专业)"
                        android:layout_marginLeft="10px"
                        android:textColor="#f29600"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20px">
                    <TextView
                        android:id="@+id/tv_paiming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32px"
                        android:textColor="#999999"
                        android:text="全国排名31"/>
                    <LinearLayout
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"

                        >
                        <TextView
                            android:id="@+id/tv_nine"
                            android:layout_width="wrap_content"
                            android:layout_height="50px"
                            android:text="985"
                            android:textSize="32px"
                            android:gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/back_wenben"
                            android:textColor="#3B9EFF"
                           />
                        <TextView
                            android:id="@+id/tv_two"
                            android:layout_width="wrap_content"
                            android:layout_height="50px"
                            android:text="211"
                            android:textSize="32px"
                            android:visibility="gone"
                            android:gravity="center"
                            android:background="@drawable/back_wenben"
                            android:textColor="#3B9EFF"
                            android:layout_marginLeft="10px"/>


                        <TextView
                            android:id="@+id/tv_graduate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="卓越计划"
                            android:gravity="center"
                            android:textSize="32px"
                            android:background="@drawable/back_wenben"
                            android:textColor="#3B9EFF"
                            android:padding="5px"
                            android:visibility="gone"

                            android:layout_marginLeft="10px"/>
                        <TextView
                            android:id="@+id/tv_recruit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重点学科"
                            android:gravity="center"
                            android:textSize="32px"
                            android:background="@drawable/back_wenben"
                            android:textColor="#3B9EFF"
                            android:padding="5px"
                            android:visibility="gone"

                            android:layout_marginLeft="10px"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_zy"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:background="#fff"
            android:layout_marginTop="180px"
            >
            <TextView
                android:id="@+id/tv_zhuanye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32%"
                android:textSize="40px"
                android:textColor="#FF3B3B"
                android:layout_centerVertical="true"
                android:layout_marginLeft="190px"/>
            <TextView
                android:id="@+id/tv_zy_name"
                android:layout_width="490px"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="公共关系学"
                android:textSize="40px"
                android:textColor="#666666"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_zhuanye"
                android:layout_marginLeft="10px"/>
            <LinearLayout
                android:id="@+id/ll_zhankai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"

                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lan_xia"
                    android:visibility="visible"
                    android:layout_marginRight="10px"
                      />
                <TextView
                    android:id="@+id/tv_qb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部专业"
                    android:textColor="#3B9EFF"
                    android:layout_marginRight="20px"
                    android:visibility="visible"
                    />
                <ImageView
                    android:id="@+id/iv_shang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shang"
                    android:visibility="gone"
                    android:layout_marginRight="10px"

                    />
                <TextView
                    android:id="@+id/tv_sq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收起"
                    android:textColor="#3B9EFF"
                    android:layout_marginRight="20px"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_marginTop="180px"
        android:layout_marginLeft="190px"
        ></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_zhuanye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290px"
        android:visibility="gone"
        android:scrollbars="none"></android.support.v7.widget.RecyclerView>
</RelativeLayout>