<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <untils.CircleProgressView
        android:id="@+id/cpv"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="66px"/>

    <LinearLayout
        android:id="@+id/ll_tuijiana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cpv"
        android:layout_marginLeft="26px"
        android:layout_marginRight="100px"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_zy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="财务管理"
                android:textSize="54px"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px">
            <TextView
                android:visibility="visible"
                android:id="@+id/tv_tj_zhuanye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:textColor="#F29600"
                android:gravity="center"
                 android:background="@drawable/back_chengse"
                android:text="推荐专业"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_zd_zhuanye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:textColor="#F29600"
                android:layout_marginLeft="14px"
                android:gravity="center"
                android:background="@drawable/back_chengse"
                android:text="重点专业"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tuijian"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业类别:  "
                android:textSize="32px"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_zy_liebei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据"
                android:textSize="32px"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_year_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据"
                android:layout_marginLeft="40px"
                android:textSize="32px"
                android:textColor="#999999"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="66px"/>

    <View
        android:layout_marginTop="40px"
        android:layout_below="@+id/ll_tuijiana"
        android:layout_width="match_parent"
        android:layout_height="20px"></View>
</RelativeLayout>