<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_demo.Buy2Activity">
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/rl_buytitle"
        android:layout_width="match_parent"
        android:layout_height="120px"
        >
        <ImageView
            android:padding="10px"
            android:id="@+id/buy2_iv_back"
            android:layout_width="150px"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:src="@mipmap/left"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/grade_month"
            android:text="升学设计系统"
            android:textColor="#2c2c2c"
            android:textSize="50px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv"
        android:layout_above="@+id/re_buydi"
        android:layout_below="@+id/rl_buytitle"
        android:layout_width="match_parent"
          android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--    <TextView
                android:background="#fff"
                android:textSize="60px"
                android:textColor="#3B9EFF"
                android:gravity="center_horizontal|bottom"
                android:text="VIP专享-您的专属权益"
                android:id="@+id/rl_title2"
                android:layout_width="match_parent"
                android:layout_height="150px">
            </TextView>-->
          <!--  <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/efc_1"
                android:scaleType="fitXY"
                  />-->


            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/efc2"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:alpha="0.7"


                android:gravity="center_horizontal"
                android:background="@drawable/bg_hei"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40px"
                android:layout_marginRight="20px">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_yi"
                    android:textColor="#fff"
                    android:textSize="40px"
                    android:layout_marginLeft="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018已服务考生:"/>
                <TextView
                    android:layout_centerVertical="true"

                    android:id="@+id/tv_ren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_yi"
                    android:textSize="50px"
                    android:textColor="#F29600"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:textColor="#fff"
                    android:layout_toRightOf="@+id/tv_ren"
                    android:textSize="40px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/re_buydi"
         android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="154px"
        android:background="#fff">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"
            ></View>
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="500px"
            android:layout_marginLeft="66px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="75px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#FF6700"
                    android:textSize="60px"
                    />
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="698"
                    android:textColor="#FF6700"
                    android:textSize="60px"
                    android:layout_marginLeft="10px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距高考仅剩"
                    android:textSize="34px"
                    android:textColor="#999999"/>
                <TextView
                    android:id="@+id/buy2_tvdjs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:textColor="#FF6700"
                    android:textSize="50px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textSize="34px"
                    android:textColor="#999999"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200px">
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离高考仅剩"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:textSize="44px"/>
            <TextView
                android:id="@+id/tv_day1"
                android:layout_toRightOf="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_centerVertical="true"
                android:background="@drawable/back_day2"
                android:textColor="#F25643"
                android:gravity="center"
                android:layout_marginLeft="10px"/>
            <TextView
                android:id="@+id/tv_day2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:background="@drawable/back_day2"
                android:textColor="#F25643"
                android:gravity="center"
                android:layout_marginLeft="10px"/>
            <TextView
                android:id="@+id/tv_day3"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:background="@drawable/back_day2"
                android:textColor="#F25643"
                android:gravity="center"
                android:layout_marginLeft="10px"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:layout_toRightOf="@id/tv_day3"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:textSize="44px"/>
            <TextView
                android:layout_marginRight="20px"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_goumai2"
                android:layout_width="500px"
                android:layout_height="110px"
                android:text="开启免费体验"
                android:textSize="50px"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_confirm"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
